<div class="my-4">
    <h2 class="mb-4">Create new course</h2>
    <form method="POST" action="/course/store">
        <div class="form-group">
            <label for="nameInput">Course name</label>
            <input type="text" name="name" class="form-control" id="nameInput" placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="inputDescription">Description</label>
            <input type="text" name="description" class="form-control" id="inputDescription" placeholder="Enter Description">
        </div>
        <div class="form-group">
            <label for="inputVideoId">Video ID</label>
            <input type="text" name="videoId" class="form-control" id="inputVideoId" placeholder="Enter video ID">
        </div>
        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>
</div>