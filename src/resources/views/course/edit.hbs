<div class="my-4">
    <h2 class="mb-4">Edit course</h2>
    <form method="POST" action="/course/{{ course._id }}?_method=PUT">
        <div class="form-group">
            <label for="nameInput">Course name</label>
            <input type="text" name="name" value="{{ course.name }}" class="form-control" id="nameInput" placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="inputDescription">Description</label>
            <textarea name="description" class="form-control" id="inputDescription" placeholder="Enter Description">{{ course.description }}</textarea>
        </div>
        <div class="form-group">
            <label for="inputVideoId">Video ID</label>
            <input type="text" name="videoId" value="{{ course.videoId }}"  class="form-control" id="inputVideoId" placeholder="Enter video ID">
        </div>
        <button type="submit" class="btn btn-primary mt-4">Save change</button>
    </form>
</div>