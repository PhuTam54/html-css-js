<div class="my-4">
    <div class="row g-4">
        
        {{#each courses }}
        <div class="col-sm-6 col-md-4">
            <div class="card">
                <a href="/course/{{ this.slug }}" class="text text-secondary" style="text-decoration: none;">
                    <img class="card-img-top" src="{{ this.thumbnail }}" alt="{{ this.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ this.name }}</h5>
                        <p class="card-text"></p>
                        <a href="#" class="btn btn-primary">Buy now</a>
                    </div>
                </a>
            </div>
        </div>
        {{/each}}

    </div>
</div>